{
  "name": "NFYT",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Noise Free Youtube",
  "browser_action": {
    "default_title": "NFYT!",
    "default_popup": "./html/popup.html"
  },
  "options_page": "./html/options.html",
  "permissions": ["storage","http://*/*","https://*/*"],
  "content_scripts": [
    {
      "run_at" :"document_end",
      "matches": ["https://www.youtube.com/*"],
      "js": ["./js/nfty.js"]
    }
  ]
}
